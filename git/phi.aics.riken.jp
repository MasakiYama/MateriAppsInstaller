#!/bin/sh

BASEDIR=`dirname $0`
. $BASEDIR/../prefix.sh
. $BASEDIR/../builddir.sh
. $BASEDIR/version.sh

cd $BUILDDIR
rm -rf git-$GIT_VERSION
tar zxf $HOME/source/git-$GIT_VERSION.tar.gz
cd git-$GIT_VERSION
./configure --prefix=$PREFIX_OPT --with-python=$PREFIX_OPT/bin/python2.7
LD_LIBRARY_PATH=$PREFIX_OPT/lib:$LD_LIBRARY_PATH make -j4
sudo LD_LIBRARY_PATH=$PREFIX_OPT/lib:$LD_LIBRARY_PATH make install
