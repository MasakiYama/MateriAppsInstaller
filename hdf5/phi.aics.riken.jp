#!/bin/sh

BASEDIR=`dirname $0`
. $BASEDIR/../prefix.sh
. $BASEDIR/../builddir.sh
. $BASEDIR/version.sh

cd $BUILDDIR
rm -rf szip-$SZIP_VERSION
tar zxf $HOME/source/szip-$SZIP_VERSION.tar.gz
cd szip-$SZIP_VERSION
./configure --prefix=$PREFIX_OPT
make -j4
sudo make install

cd $BUILDDIR
rm -rf hdf5-$HDF5_VERSION
tar jxf $HOME/source/hdf5-$HDF5_VERSION.tar.bz2
cd hdf5-$HDF5_VERSION
./configure --prefix=$PREFIX_OPT --with-szlib=$PREFIX_OPT
make -j4
sudo make install
